<%= form_for [@user, @artwork] do |f| %>
  <p><%= f.label :title %>
    <%= f.text_field :title %></p>

  <p><%= f.label :description %>
    <%= f.text_field :description %></p>

  <p>
    <%= f.label :image_url %>
    <%= f.text_field :image_url %>
  </p>

  <p>
    <%= f.label :art_image %>
    <%= f.file_field :art_image %>
  </p>

  <%= f.submit "Submit", id: "submit" %>
<% end %>

<p><a href="/users/<%= @user.id %>/artworks">Cancel</a></p>
