<% if signed_in? %>

  <%= form_for :session, url: signout_path, method: 'delete' do |f| %>
    Signed in as <%= link_to current_user.first_name, current_user %>
    <%= f.submit "Sign Out", id: 'signout' %>
  <% end %>

  <p><div class="profile"><a href="/users/<%= current_user.id %>"><%= image_tag current_user.avatar.url(:thumb) %></div></a></p>

  <p><%= link_to "My Gallery", user_artworks_path(current_user) %></p>

  <p><a href='/users/<%= current_user.id.to_s %>/subscriptions'>My Subscriptions (<%= current_user.follow_count.to_s %>)</a></p>
  <p><a href='/users/<%= current_user.id.to_s %>/followers'>My Followers (<%= current_user.followers_by_type_count('User').to_s %>)</a></p>

<% else %>

  <%= link_to "Sign In", signin_path %> | <%= link_to "Sign Up", signup_path %>

<% end %>
