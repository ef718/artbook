<div class="page">
  <h1>Artbook</h1>

  <p class="intro">Artbook is an online artwork and photography portfolio.</p>
  <p class="intro">Browse artwork or create your account today!</p>
  <%= form_tag("/search", method: "get") do %>
    <%= label_tag(:q, "Search for Art:") %>
    <%= text_field_tag(:q) %>
    <%= submit_tag("Search") %>
  <% end %>


  <p><%= link_to "Random", random_path, :class => "home_link" %></p>
  <p>
    <% if signed_in? %>
      <%= link_to "Upload Artwork", new_user_artwork_path(@user), :class => "home_link" %>
    <% end %>
  </p>
</div>
